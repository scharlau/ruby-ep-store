<h1>Listing dvds</h1>

<table>
  <tr>
    <th>Asin</th>
    <th>Detailspageurl</th>
    <th>Actor</th>
    <th>Director</th>
    <th>Title</th>
    <th>Genre</th>
    <th>Image</th>
    <th>Dateadded</th>
  </tr>

<% @dvds.each do |dvd| %>
  <tr>
    <td><%=h dvd.ASIN %></td>
    <td><%=h dvd.detailsPageURL %></td>
    <td><%=h dvd.actor %></td>
    <td><%=h dvd.director %></td>
    <td><%=h dvd.title %></td>
    <td><%=h dvd.genre %></td>
    <td><%=h dvd.image %></td>
    <td><%=h dvd.dateadded %></td>
    <td><%= link_to 'Show', dvd %></td>
    <td><%= link_to 'Edit', edit_dvd_path(dvd) %></td>
    <td><%= link_to 'Destroy', dvd, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

